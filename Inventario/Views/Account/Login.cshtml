@using Inventario.Models
@model LoginViewModel




@{
    ViewBag.Title = "Iniciar sesión";
}

<!--<h2>@ViewBag.Title.</h2>-->


<style>
  /*  .preFooter, .top-bar {
        display: none !important;
    }*/


    body {
        background: #000 !important;
    }
</style>



<div class="bg" style="background-color:black"!important>
    <div class="container">

        <div class="row justify-content-md-center" style="padding-top:15vh">
            <div class="col col-lg-2"></div>

            <div class="col-md-auto">
                <img class="mx-auto d-block" src="@Url.Content("~/Content/dashboard/logo_empresas.png")" width="200" alt="">
            </div>

            <div class="col col-lg-2"></div>
        </div>

        <div class="row justify-content-md-center">
            <div class="col col-lg-2"></div>

            <div class="col-md-auto formulario">
                @*<h5>INGRESO DE USUARIOS</h5>*@







            </div>

            <div class="col col-lg-2">



            </div>

            <div class="col col-lg-12">

                <div class="auth-box-w" style="margin-top: 20px;background:#FFF!important">




                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            //Commented out
                            @*<h4>Use a local account to log in.</h4>*@

                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new {  @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Email, new { style = "background-color:transparent!important", @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.UserName)*@
                                    @Html.ValidationMessageFor(m => m.Email, "El Usuario es requerido")
                                    <div class="pre-icon glyphicon glyphicon-user"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Password, new { style = "background-color:transparent!important", @class = "form-control" })
                                    @*@Html.ValidationMessageFor(m => m.Password)*@
                                    @Html.ValidationMessageFor(m => m.Password, "La Clave es requerida.")
                                    @*<div class="pre-icon glyphicon glyphicon-king"></div>*@
                                </div>
                            </div>
                            <div class="form-group" style="display:none">
                                <div class="">
                                    <div class="checkbox" style="visibility:hidden">
                                        @*<div class="checkbox" style="visibility:hidden">*@
                                        @*style="visibility:hidden"*@
                                        @*Commented out*@
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                        <br />

                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <input id="LoginBtnOk" type="submit" value="INICIAR SESIÓN " class="btn-inicio-sesion" />
                                </div>
                            </div>
                            <p>
                                @*    @Html.ActionLink("Register", "Register") if you don't have a local account.*@
                            </p>
                        }
                    </section>


                </div>
            </div>

        </div>
    </div>


</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



