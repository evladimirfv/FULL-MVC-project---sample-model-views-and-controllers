@model PagedList.IPagedList<Inventario.Models.proveedor>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2 style="font-weight:bold">Proveedores</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="blackImportant">
        <th>
            Nombre comercial
        </th>
        <th>
            Contacto 1
        </th>
        <th>
            Telefono 1
        </th>
        <th>
            Contacto 2
        </th>
        <th>
            Telefono 2
        </th>
        <th>
            Correo(s) electrónico
        </th>
        <th>
            @using (Html.BeginForm())
            {
                <div style="display:inline-block">
                    @Html.TextBox("searchString", null, new { @class = "resizedTextbox" })
                    <input id="buscarSubmit" type="submit" class="lupaImage" value="Buscar" />   @* btn btn-primary *@
                    <button class="cancelarImage" onclick="clean();"> X </button>
                </div>

            }
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nombre_comercial)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nombre_contacto_1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.telefono_contacto_1)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.nombre_contacto_2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.telefono_contacto_2)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.email_soporte)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.idproveedor }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Ver", "Details", new { id = item.idproveedor }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Borrar", "Delete", new { id = item.idproveedor }, new { @class = "btn btn-primary" })
    </td>
</tr>
}

</table>
