@model Inventario.Models.puerto

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal left-half" style="margin-left:20px!important;margin-top:15px!important;">
    <h4 style="font-weight:bold">Modificar puerto</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idpuerto)

    <div class="form-group">
        @Html.LabelFor(model => model.nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.especificaciones, "Especificaciones", htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.especificaciones, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.especificaciones, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="margin-top:20px">
        <div class="col-md-offset-2 col-md-6">
            @Html.ActionLink("Listado", "Index", null, new { @class = "btn btn-primary btn-lg" })
            @*<div class="divider"></div>*@
            <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
