@model Inventario.Models.software

@{
    ViewBag.Title = "Details";
}



<div>
    <h4 style="font-weight:bold">Software</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Versión
        </dt>

        <dd>
            @Html.DisplayFor(model => model.version)
        </dd>

        <dt>
            Código
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codigo)
        </dd>

        <dt>
            Información Técnica
        </dt>

        <dd>
            @Html.DisplayFor(model => model.informacion_tecnica)
        </dd>

        <dt>
            Configuraciones
        </dt>

        <dd>
            @Html.DisplayFor(model => model.configuraciones)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.es_activo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.es_activo)
            </dd>*@

        <dt>
            Licencias adquiridas
        </dt>

        <dd>
            @Html.DisplayFor(model => model.licencias_adquiridas)
        </dd>

        <dt>
            Licencias instaladas
        </dt>

        <dd>
            @Html.DisplayFor(model => model.licencias_instaladas)
        </dd>

        <dt>
            Proveedor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.proveedor.nombre_comercial)
        </dd>

        <dt>
            Tipo de software
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tipo_de_software.categoria)
        </dd>

    </dl>
</div>

<div class="col-md-offset-2" style="width:300px!important;display:inline-block!important;">
    @Html.ActionLink("Listado", "Index", null, new { @class = "btn btn-primary btn-lg" })
    @*<div class="divider"></div>*@
    @Html.ActionLink("Editar", "Edit", new { id = Model.idsoftware }, new { @class = "btn btn-primary btn-lg" })
</div>