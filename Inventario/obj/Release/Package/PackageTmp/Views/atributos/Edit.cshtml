@using Inventario.Views 
@model Inventario.Models.atributo

@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" style="margin-left:20px!important;margin-top:15px!important;">
    <h4 style="font-weight:bold">Modificar atributo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idatributo)

    <div class="form-group">
        @Html.LabelFor(model => model.nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.tipo_dato_fk, "Tipo dato", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("tipo_dato_fk", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.tipo_dato_fk, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.es_requerido, "Requerido", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.es_requerido, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.CheckBoxIntFor(model => model.es_requerido, new { htmlAttributes = new { @class = "form-control" } }, "false")

            @Html.ValidationMessageFor(model => model.es_requerido, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group" style="margin-top:20px">
        <div class="col-md-offset-2 col-md-6">
            @Html.ActionLink("Listado", "Index", null, new { @class = "btn btn-primary btn-lg" })
            @*<div class="divider"></div>*@
            <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
        </div>
    </div>

</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
