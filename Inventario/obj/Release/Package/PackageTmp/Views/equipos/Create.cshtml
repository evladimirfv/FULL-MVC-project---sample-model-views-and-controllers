                       data-val="true"
                       @GetRequired(ViewBag.listaAtributos[i].es_requerido)
                       data-val-regex="El tipo de dato del campo es @tdD[ViewBag.listaAtributos[i].tipo_dato_fk]"
                       data-val-regex-pattern="@rxD[ViewBag.listaAtributos[i].tipo_dato_fk]">

                <span class="field-validation-valid text-danger"
                      data-valmsg-for="atributo_por_equipo[@i].valor_atributo"
