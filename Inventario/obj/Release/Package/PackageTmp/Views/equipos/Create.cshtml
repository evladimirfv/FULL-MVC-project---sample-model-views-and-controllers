    @{

        Dictionary<int, string> rxD = (Dictionary<int, string>)ViewBag.regexDict;
        Dictionary<int, string> tdD = (Dictionary<int, string>)ViewBag.tipoDatoDict;
        Dictionary<int, string> tdInputD = (Dictionary<int, string>)ViewBag.tipoDatoInputDict;



        string GetRequired(sbyte expression)
        {
            if (expression == 1)
                return "data-val-required=obligatorio";
            else
                return "";
        }


    }

    @for (int i = 0; i < ViewBag.listaAtributos.Count; i++)
    {


        <div class="form-group">

            <label class="control-label col-md-2" for="">
                @ViewBag.listaAtributos[i].nombre
            </label>



            <div class="col-md-10">

                <input class="form-control text-box single-line"
                       id="atributo_por_equipo[@i].valor_atributo"
