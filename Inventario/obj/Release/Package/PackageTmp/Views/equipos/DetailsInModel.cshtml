@model Inventario.Models.equipo


@{
    ViewBag.Title = "PUERTOS POR EQUIPO";
}

<h2>PUERTOS POR EQUIPO</h2>


<table class="table">
    <tr>
        <th>
            Nombre
        </th>

        <th>
            Numero de puertos
        </th>
        <th>
            Numero de serie
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model.puerto_por_equipo)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.puerto.nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.numero_de_puertos)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.equipo.s_equipo_numero_serie)
    </td>

    <td>
        @Html.ActionLink("Nuevo puerto", "CreatePuertoPorEquipo")
        @Html.ActionLink("Editar", "Edit", new { @*id = item.*@  }) |
        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
    </td>
</tr>
    }

</table>
