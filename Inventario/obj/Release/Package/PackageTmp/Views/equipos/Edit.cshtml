    @{

        Dictionary<int, string> rxD = (Dictionary<int, string>)ViewBag.regexDict;
        Dictionary<int, string> tdD = (Dictionary<int, string>)ViewBag.tipoDatoDict;
        Dictionary<int, string> tdInputD = (Dictionary<int, string>)ViewBag.tipoDatoInputDict;



        string GetRequired(sbyte expression)
        {
            if (expression == 1)
                return "data-val-required=obligatorio";
            else
                return "";
        }

    }




    @for (int i = 0; i < ViewBag.listaAtributos.Count; i++)
    {


        <div class="form-group">

            <label class="control-label col-md-2" for="">
                @ViewBag.listaAtributos[i].nombre
            </label>



            @if (Model.atributo_por_equipo.ToArray().Count() > i)
            {
                <div class="col-md-10">

                    <input class="form-control text-box single-line"
                           id="atributo_por_equipo[@i].valor_atributo"
                           name="atributo_por_equipo[@i].valor_atributo"
                           type="@tdInputD[ViewBag.listaAtributos[i].tipo_dato_fk]"
                           value="@Model.atributo_por_equipo.ToArray()[i].valor_atributo"
                           pattern="@rxD[ViewBag.listaAtributos[i].tipo_dato_fk]"
                           data-val="true"
                           @GetRequired(ViewBag.listaAtributos[i].es_requerido)
                           data-val-regex="El tipo de dato del campo es @tdD[ViewBag.listaAtributos[i].tipo_dato_fk]"
                           data-val-regex-pattern="@rxD[ViewBag.listaAtributos[i].tipo_dato_fk]">

                    <span class="field-validation-valid text-danger"
                          data-valmsg-for="atributo_por_equipo[@i].valor_atributo"
                          data-valmsg-replace="true"></span>

                </div>

            }
            else
            {
                <div class="col-md-10">

                    <input class="form-control text-box single-line"
                           id="atributo_por_equipo[@i].valor_atributo"
                           name="atributo_por_equipo[@i].valor_atributo"
                           type="text"
                           value=""
                           pattern="@rxD[ViewBag.listaAtributos[i].tipo_dato_fk]"
