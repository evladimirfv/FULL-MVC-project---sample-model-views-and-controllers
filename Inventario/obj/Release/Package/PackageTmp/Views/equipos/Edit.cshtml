                          data-valmsg-replace="true"></span>

                </div>
            }


            <div class="col-md-10">
                <input class=""
                       id="atributo_por_equipo[@i].atributo_fk"
                       name="atributo_por_equipo[@i].atributo_fk" type="hidden" value="@ViewBag.listaAtributos[i].idatributo">           @*atributo_por_equipo[@i].atributo_fk*@
                </div>

                <div class="col-md-10">
                    <input class=""
                           id="atributo_por_equipo[@i].equipo_fk"
                           name="atributo_por_equipo[@i].equipo_fk" type="hidden" value="@Model.idequipo">
                </div>


            </div>

        }





