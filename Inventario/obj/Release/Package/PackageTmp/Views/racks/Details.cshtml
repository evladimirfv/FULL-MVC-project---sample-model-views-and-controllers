@model Inventario.Models.rack

@{
    ViewBag.Title = "Details";
}



<div class="left-half">
   
    <div>
    <h4 style="font-weight:bold">Rack</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Código
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codigo)
        </dd>

        <dt>
            Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        @*<dt>
                @Html.DisplayNameFor(model => model.orden)
            </dt>*@

        @*<dd>
                @Html.DisplayFor(model => model.orden)
            </dd>*@

        <dt>
            Altura(U)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.altura_u)
        </dd>

        <dt>
            Profundidad(Inch)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.prof_inch)
        </dd>

        <dt>
            Proveedor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.proveedor.nombre_comercial)
        </dd>

        <dt>
            Ubicación
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ubicacion.nombre)
        </dd>

    </dl>







    </div>

<div class="col-md-offset-4" style="width:300px!important;display:inline-block!important;">
    @Html.ActionLink("Listado", "Index", null, new { @class = "btn btn-primary btn-lg" })
    @*<div class="divider"></div>*@
    @Html.ActionLink("Editar", "Edit", new { id = Model.idrack }, new { @class = "btn btn-primary btn-lg" })
</div>

</div>



<div class="right-half">

    @{
        Html.RenderPartial("BayFace", Model);

    }
</div>



<style>

    .left-half {
        
        background-color: transparent;
        float: left;
        width: 30%;
    }

    .right-half {
        background-color: transparent;
        float: right;
        width: 70%;
    }
</style>
